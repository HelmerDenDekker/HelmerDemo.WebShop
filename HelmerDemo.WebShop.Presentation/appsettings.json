{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Properties": {
      "Application": "HelmerDemo.WebShop"
    }
  },
  "ConnectionStrings": {
    "CustomerDatabase": "Server=(localdb)\\mssqllocaldb;Database=Customers;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "HeaderSettings": {
    "ContentSecurityPolicy": "default-srcÂ *; connect-src 'self'; object-src 'self'; frame-ancestors 'none'; sandbox allow-forms allow-same-origin allow-scripts; base-uri 'self'; style-src 'self'; upgrade-insecure-requests;"
  },
  "CorsSettings": {
    "AllowedOrigins": [ "*" ],
    "AllowedHeaders": [ "Content-Type", "Authorization" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "OPTIONS" ]
  }
}
